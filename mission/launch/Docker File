FROM ubuntu:22.04
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    python3 python3-pip python3-venv wget git curl ca-certificates \
    xvfb x11-xserver-utils ffmpeg

WORKDIR /workspace
COPY requirements.txt /workspace/
RUN python3 -m venv /workspace/venv
RUN /workspace/venv/bin/pip install -U pip
RUN /workspace/venv/bin/pip install -r requirements.txt

COPY . /workspace
CMD ["/bin/bash"]
